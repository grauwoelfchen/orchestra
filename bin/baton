#!/usr/bin/env ruby
# encoding: utf-8

require "drb"
require "orchestra/baton"

port = ARGV[0] || "10061"
DRb.start_service
staff = DRbObject.new_with_uri("druby://localhost:#{port}")
staff_p = Rinda::TupleSpaceProxy.new(staff)

port = ARGV[1] || "10060"
DRb.start_service
score = DRbObject.new_with_uri("druby://localhost:#{port}")
Baton.new(staff_p, score).main_loop
