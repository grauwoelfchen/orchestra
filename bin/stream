#!/usr/bin/env ruby
# encoding: utf-8

require "drb"
require "rinda/tuplespace"
require "orchestra/stream"

$stdout.sync = true

port = ARGV[0] || "10061"
DRb.start_service
staff = DRbObject.new_with_uri("druby://localhost:#{port}")
staff_p = Rinda::TupleSpaceProxy.new(staff)

port = ARGV[1] || "10063"
DRb.start_service
acoustic = DRbObject.new_with_uri("druby://localhost:#{port}")
Stream.new(staff_p, acoustic).main_loop
